					</div>
					<?php foreach($gamesForPhase as $groups): ?>
	                	<?php foreach($groups as $games): ?>
	                        <?php foreach($games as $game): ?>
	                         	<?php if($game['group_id'] == $group->id): ?>
								<table style="width:420px;" id="fixturein">
